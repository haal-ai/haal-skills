{
  "metadata": {
    "id": "review-human-written-spec",
    "name": "Review Human Written Spec",
    "shortDescription": "Thoroughly analyze a human specification to challenge it and prepare API design questions for an SME.",
    "description": "Multi-phase review workflow that analyzes a human-written specification, identifies ambiguities and missing decisions needed for API design, and produces a structured question set for the subject matter expert (with rationale and options).",
    "objectives": [
      "Extract and normalize requirements and assumptions from a human-written specification",
      "Identify ambiguities, missing decisions, and risks that block API design",
      "Produce SME questions with rationale and proposed options",
      "Package results as a review document suitable to drive OpenAPI design"
    ],
    "tags": [
      "api",
      "openapi",
      "requirements",
      "spec-review",
      "questionnaire"
    ],
    "status": "experimental",
    "exposure": "internal",
    "version": "1.0.0",
    "protocol": "Propose-Confirm-Act",
    "created": "2025-12-15",
    "updated": "2026-01-14"
  },
