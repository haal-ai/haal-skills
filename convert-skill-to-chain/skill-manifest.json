{
  "metadata": {
    "id": "convert-skill-to-chain",
    "name": "Convert Skill to Chain",
    "version": "1.0.0",
    "description": "Converts existing OLAF skills to the master-chain pattern with isolated task prompts",
    "shortDescription": "Convert existing skills to master-chain pattern",
    "objectives": [
      "Analyze existing skill structure and identify task boundaries",
      "Extract individual tasks and create master coordinator prompt",
      "Search for and reuse common tasks from registry",
      "Update task registry with newly created tasks",
      "Generate conversion summary and documentation"
    ],
    "author": "OLAF Framework",
    "status": "experimental",
    "exposure": "internal",
    "tags": [
      "skill-conversion",
      "refactoring",
      "master-chain",
      "automation",
      "task-decomposition"
    ],
    "protocol": "Propose-Act",
    "aliases": [
      "convert to chain",
      "refactor skill",
      "master chain pattern"
    ],
    "created": "2025-11-24",
    "updated": "2026-01-14"
  },
  "bom": {
    "prompts": [
      {
        "name": "convert-skill-to-chain",
        "path": "/skill.md",
        "description": "Main coordinator for skill conversion"
      }
    ]
  },
